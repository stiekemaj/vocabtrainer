<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1.0.001" author="jeroen.stiekema">
        <comment>Create axon event tables</comment>
        <createTable tableName="DOMAINEVENTENTRY">
            <column name="AGGREGATEIDENTIFIER" type="varchar2(255)"/>
            <column name="TYPE" type="varchar2(255)"/>
            <column name="SEQUENCENUMBER" type="number(10,0)"/>
            <column name="EVENTIDENTIFIER" type="varchar2(255)"/>
            <column name="METADATA" type="blob"/>
            <column name="PAYLOAD" type="blob"/>
            <column name="PAYLOADREVISION" type="varchar2(255)"/>
            <column name="PAYLOADTYPE" type="varchar2(255)"/>
            <column name="TIMESTAMP" type="varchar2(255)"/>
        </createTable>

        <addPrimaryKey tableName="DOMAINEVENTENTRY" columnNames="AGGREGATEIDENTIFIER, TYPE, SEQUENCENUMBER"/>
    </changeSet>

</databaseChangeLog>